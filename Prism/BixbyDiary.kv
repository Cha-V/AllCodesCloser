GridLayoutExample:

<GridLayoutExample@AnchorLayout>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/jeremy-bezanger-QhYQ0z4QZFo-unsplash.jpg'
    
    rows:5
    Title
    Output
    AnchorLayoutExample
<Title@AnchorLayout>:
    anchor_x:  "left"
    anchor_y:   "top"
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "BIXBY DIARY"
            color: 0, 0, 0
<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "bottom"
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "REMEMBER"
            font_name: 'fonts/MPLUSRounded1c-Medium.ttf'
            size_hint: .1, .1
            on_press: root.on_remember_click()
            color: 0, 0, 0
        Button:
            text: "QUERY"
            font_name: 'fonts/MPLUSRounded1c-Medium.ttf'
            size_hint: .1, .1
            on_press: root.on_query_click()
            color: 0, 0, 0
<Output@AnchorLayout>:
    anchor_x:  "center"
    anchor_y:   "bottom"
    Label:
        text: "BIXBY DIARY SAMPLE OUTPUT"
        color: 0, 0, 0